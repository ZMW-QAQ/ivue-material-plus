{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // 复合选项强制执行某些约束
    // 所有实现文件必须通过包含模式匹配或列在文件数组中。
    // 如果违反此约束，tsc 将通知您未指定哪些文件。
    "composite": true,
    // 在 .tsx文件里支持JSX： "React"或 "Preserve"
    "jsx": "preserve",
    // 编译过程中需要引入的库文件的列表
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["vue", "unplugin-vue-macros/macros-global"],
    // 是否在编译时进行库文件检查的是否在编译时进行库文件检查的
    "skipLibCheck": true
  },
  "include": ["packages", "typings/components.d.ts", "typings/env.d.ts"],
  "exclude": [
    "node_modules",
    "packages/test-utils",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts"
  ]
}
